datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
  STAFF
}

enum RentalStatus {
  PENDING
  APPROVED
  ON_RENT
  RETURNED
  OVERDUE
  CANCELLED
  INSPECTION
  COMPLETED
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  roles       Role[]    @default([USER])
  profile     UserProfile?
  kyc         UserKYC?
  rentals     RentalOrder[]
  reviews     Review[]
  notifications Notification[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model UserProfile {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique
  firstName String
  lastName  String
  phone     String?
  address   String?
  user      User    @relation(fields: [userId], references: [id])
}

model UserKYC {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  idCardUrl String
  status    String   @default("PENDING") // PENDING, VERIFIED, REJECTED
  user      User     @relation(fields: [userId], references: [id])
}

model Item {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  pricePerDay Decimal
  stock       Int           @default(1)
  categoryId  Int
  category    ItemCategory  @relation(fields: [categoryId], references: [id])
  media       ItemMedia[]
  tags        ItemTag[]
  rentalItems RentalItem[]
  reviews     Review[]
  createdAt   DateTime      @default(now())
}

model ItemCategory {
  id    Int    @id @default(autoincrement())
  name  String
  items Item[]
}

model ItemMedia {
  id      Int    @id @default(autoincrement())
  itemId  Int
  url     String
  type    String // IMAGE, VIDEO
  item    Item   @relation(fields: [itemId], references: [id])
}

model ItemTag {
  id    Int    @id @default(autoincrement())
  name  String
  items Item[]
}

model RentalOrder {
  id          Int           @id @default(autoincrement())
  userId      Int
  totalPrice  Decimal
  status      RentalStatus  @default(PENDING)
  startDate   DateTime
  endDate     DateTime
  user        User          @relation(fields: [userId], references: [id])
  items       RentalItem[]
  invoice     Invoice?
  return      Return?
  createdAt   DateTime      @default(now())
}

model RentalItem {
  id            Int         @id @default(autoincrement())
  rentalOrderId Int
  itemId        Int
  priceAtRent   Decimal
  rentalOrder   RentalOrder @relation(fields: [rentalOrderId], references: [id])
  item          Item        @relation(fields: [itemId], references: [id])
}

model Invoice {
  id            Int          @id @default(autoincrement())
  rentalOrderId Int          @unique
  amount        Decimal
  status        String       // UNPAID, PAID, REFUNDED
  transactions  PaymentTransaction[]
  rentalOrder   RentalOrder  @relation(fields: [rentalOrderId], references: [id])
}

model PaymentTransaction {
  id        Int      @id @default(autoincrement())
  invoiceId Int
  amount    Decimal
  method    String   // CREDIT_CARD, QR
  status    String   // SUCCESS, FAILED
  invoice   Invoice  @relation(fields: [invoiceId], references: [id])
}

model Return {
  id            Int           @id @default(autoincrement())
  rentalOrderId Int           @unique
  returnDate    DateTime      @default(now())
  status        String        // PENDING_INSPECTION, COMPLETED
  rentalOrder   RentalOrder   @relation(fields: [rentalOrderId], references: [id])
  damageReport  DamageReport?
}

model DamageReport {
  id          Int     @id @default(autoincrement())
  returnId    Int     @unique
  description String
  penaltyFee  Decimal
  return      Return  @relation(fields: [returnId], references: [id])
}

model Review {
  id      Int    @id @default(autoincrement())
  userId  Int
  itemId  Int
  rating  Int
  comment String?
  user    User   @relation(fields: [userId], references: [id])
  item    Item   @relation(fields: [itemId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  message   String
  isRead    Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model SystemConfig {
  id    String @id @default("config")
  key   String @unique
  value String
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String
  userId    Int?
  details   String?
  timestamp DateTime @default(now())
}